{
    "name": "helick/mail",
    "type": "wordpress-plugin",
    "description": "The Helick mail plugin",
    "keywords": [
        "helick",
        "mail"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/helick/mail/issues",
        "source": "https://github.com/helick/mail"
    },
    "authors": [
        {
            "name": "Evgenii Nasyrov",
            "email": "evgenii@helick.io"
        }
    ],
    "require": {
        "php": ">=7.1",
        "composer/installers": "^1.6",
        "helick/contracts": "^1.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Helick\\Mail\\": "src/"
        }
    },
    "scripts": {
        "lint": [
            "phpcs -p --standard=psr2 src"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
